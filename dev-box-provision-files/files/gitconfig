[apply]
  whitespace = nowarn
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch]
  autosetupmerge = true
  autosetuprebase = always
[core]
  editor = subl -w
  autocrlf = input
  safecrlf = true
[push]
  default = current
[alias]
  co = checkout
  ci = commit
  st = status
  sb = status -sb
  br = branch
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  type = cat-file -t
  dump = cat-file -p
  who = shortlog -s --
  fl = log -p
  dw = diff --word-diff
[help]
  autocorrect = 1
